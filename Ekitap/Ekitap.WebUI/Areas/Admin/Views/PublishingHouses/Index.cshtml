@model IEnumerable<PublishingHouse>

@{
	ViewData["Title"] = "Yayınevleri";
}


<p>
	<a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i> Yeni Yayınevi Ekle</a>
</p>
<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>

			<th>
				@Html.DisplayNameFor(model => model.Logo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.isActive)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderNo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreateDate)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>

				<td>
					<img src="/Img/PublishingHouses/@Html.DisplayFor(modelItem => item.Logo)" alt="" height="70" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.isActive)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderNo)
				</td>
				<td>
					@item.CreateDate.ToShortDateString()
				</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i>Düzenle</a> |
					<a class="btn btn-sm btn-info" class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i>Detay</a> |
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i>Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
