@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slider";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i> Yeni Slider Ekle</a>
</p>
<table class="table table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                    <a href="/Img/Sliders/@item.Image">
                        <img src="/Img/Sliders/@item.Image" alt="" height="70" />

                </a>
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i>Düzenle</a> |
                    <a class="btn btn-sm btn-info" class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i>Detay</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i>Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
